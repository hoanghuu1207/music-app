extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{titlePage}

  form(
    action=`/${prefixAdmin}/singers/create`
    method="POST"
    enctype="multipart/form-data"
  )
    .form-group
      label(for="fullName") Tên
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        placeholder="Nhập tên ca sĩ"
      )
    
    .form-group
      label(for="avatar") Hình ảnh
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
      )
    
    .form-group
      label(for="status") Trạng thái
      select(
        class="form-control"
        id="status"
        name="status"
      )
        option(value="active") Hoạt động
        option(value="inactive") Dừng hoạt động
    
    button(
      type="submit"
      class="btn btn-primary"
    ) Thêm mới  
    a(
      href=`/${prefixAdmin}/singers`
      class="btn btn-secondary ml-1"
    ) Quay lại