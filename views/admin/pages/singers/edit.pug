extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{titlePage}

  form(
    action=`/${prefixAdmin}/singers/edit/${singer.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    .form-group
      label(for="fullName") Tên
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        placeholder="Nhập tên ca sĩ"
        value=singer.fullName
      )
    
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Hình ảnh
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=singer.avatar
        class="image-preview"
        upload-image-preview
      )
    
    .form-group
      label(for="status") Trạng thái
      select(
        class="form-control"
        id="status"
        name="status"
      )
        option(value="active" selected=singer.status === "active") Hoạt động
        option(value="inactive" selected=singer.status === "inactive") Dừng hoạt động
    
    button(
      type="submit"
      class="btn btn-primary"
    ) Chỉnh sửa
    a(
      href=`/${prefixAdmin}/singers`
      class="btn btn-secondary ml-1"
    ) Quay lại